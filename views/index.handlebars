<h1>Click the button to eat that Burger!</h1>

<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        <h4>Burgers Available!<h4>
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        <h4>Burgers Devoured!<h4>
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h1>Place an Order for a Custom Burger!</h1>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Custom Ordered Burger">
      <button type="submit" class="addBurgerButton">Place your Order</button>
    </form>
  </div>
</div>